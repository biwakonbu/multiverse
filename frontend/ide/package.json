{
  "name": "multiverse-frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "lint": "oxlint -c oxlint.json src/",
    "lint:fix": "oxlint -c oxlint.json src/ --fix",
    "lint:css": "stylelint \"src/**/*.{css,svelte}\"",
    "lint:css:fix": "stylelint \"src/**/*.{css,svelte}\" --fix",
    "knip": "knip",
    "check:all": "pnpm check && pnpm lint && pnpm lint:css && pnpm knip",
    "test": "vitest run",
    "test:watch": "vitest",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test:e2e": "VITE_TEST_E2E=true playwright test",
    "test:vrt": "playwright test --config=playwright-vrt.config.ts",
    "test:vrt:update": "playwright test --config=playwright-vrt.config.ts --update-snapshots"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^1.9.0",
    "@playwright/test": "^1.57.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/svelte": "^8.6.14",
    "@storybook/svelte-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/svelte": "^5.2.9",
    "@tsconfig/svelte": "^5.0.2",
    "@types/node": "^24.10.1",
    "jsdom": "^27.2.0",
    "knip": "^5.71.0",
    "oxlint": "^1.31.0",
    "postcss-html": "^1.8.0",
    "storybook": "^8.6.14",
    "stylelint": "^16.26.1",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-declaration-strict-value": "^1.10.11",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tslib": "^2.6.2",
    "typescript": "^5.5.0",
    "vite": "^5.4.4",
    "vitest": "^4.0.15"
  },
  "dependencies": {
    "dompurify": "^3.3.0",
    "lucide-svelte": "^0.556.0",
    "marked": "^17.0.1",
    "zod": "^4.1.13"
  }
}
